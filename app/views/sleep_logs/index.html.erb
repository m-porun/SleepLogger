<div class="relative w-4/5 place-self-center"> <!-- 横幅の80%で中央配置、親要素あり -->
  <div class="relative top-24 flex justify-center"> <!-- 子要素、上から94px、横軸は中央揃え -->
    <%= render 'shared/flash' %>
    <!-- 年月選択 -->
    <%= form_with(url: sleep_logs_path, method: :get, data: { turbo: true }) do |f| %>
      <div class="form-group">
        <%= f.month_field :year_month,
                          class: 'form-control bg-primary text-center',
                          value: @selected_date.strftime('%Y-%m'),
                          onchange: 'this.form.submit();' %>
      </div>
    <% end %>

    <p class="size-52 font-bold text-center">睡眠日誌</p>

    <!-- PDFに出力ボタン -->
    <%= render 'pdf_export' %>

    <!-- 記録を保存ボタン -->
    <%= form_with(url: sleep_logs_path, method: :patch) do |f| %>
      <%= f.submit "記録を保存", class: "btn ml-5 bg-white text-neutral" %>
    <% end %>
  </div>

  <!-- 睡眠記録テーブル -->
  <div id="sleep-logs-table"> <!-- テーブルごとに一意の識別子を用意することで、指定の部分のみを更新できるようにしている  -->
    <table class="relative mt-10 mb-24 text-center text-sm text-neutral"> <!-- 要カスタマイズ -->
      <thead>
        <tr class="p-4">
          <th class="border border-secondary bg-primary">日</th>
          <th class="border border-secondary bg-primary">曜日</th>
          <th class="border border-secondary bg-primary">就床時刻</th>
          <th class="border border-secondary bg-primary">就寝時刻</th>
          <th class="border border-secondary bg-primary">覚醒時刻</th>
          <th class="border border-secondary bg-primary">起床時刻</th>
          <th class="border border-secondary bg-primary">睡眠時間</th>
          <th class="border border-secondary bg-primary">中途覚醒(回)</th>
          <th class="border border-secondary bg-primary">昼寝時間(分)</th>
          <th class="border border-secondary bg-primary">備考</th>
        </tr>
      </thead>
      <%= render 'logs_table' %>
    </table>
  </div>
</div>
