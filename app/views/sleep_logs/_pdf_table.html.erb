<div class="p-8 text-sm">
  <h1 class="text-2xl font-bold mb-6">睡眠記録（<%= @start_date.strftime("%Y年%m月") %>）</h1>
  <table class="table-auto w-full border border-collapse border-gray-300">
    <thead>
      <tr class="bg-gray-100">
        <th class="border px-4 py-2">日付</th>
        <th class="border px-4 py-2">就寝</th>
        <th class="border px-4 py-2">起床</th>
        <th class="border px-4 py-2">コメント</th>
      </tr>
    </thead>
    <tbody>
      <% sleep_logs.each do |log| %>
        <tr>
          <td class="border px-4 py-2"><%= log.sleep_date.strftime("%-m/%-d") %></td>
          <td class="border px-4 py-2"><%= log.go_to_bed_at&.strftime("%H:%M") || "-" %></td>
          <td class="border px-4 py-2"><%= log.woke_up_at&.strftime("%H:%M") || "-" %></td>
          <td class="border px-4 py-2"><%= log.comment.presence || "-" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
